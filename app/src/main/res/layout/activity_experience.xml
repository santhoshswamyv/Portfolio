<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010B13"
    tools:context=".ExperienceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/ethnocentric_rg_it"
        android:text="Experience"
        android:textSize="22sp"
        android:textColor="#E91B0F"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:fontFamily="@font/ethnocentric_rg_it"
        android:text="Self Learned"
        android:textSize="16sp"
        android:textColor="#FFDBCB"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/caviardreams"
        android:textSize="19sp"
        android:textColor="#F2A30B"
        android:text="@string/experience" />

</LinearLayout>