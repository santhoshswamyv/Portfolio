<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010B13"
    tools:context=".DetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/ethnocentric_rg_it"
        android:text="Education Details"
        android:textSize="22sp"
        android:textColor="#E91B0F"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="top"
        android:fontFamily="@font/ethnocentric_rg"
        android:text="SSLC"
        android:textSize="16sp"
        android:textColor="#FFDBCB"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:fontFamily="@font/caviardreams"
        android:gravity="top"
        android:padding="0dp"
        android:text="@string/details"
        android:textColor="#F2A30B"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="top"
        android:fontFamily="@font/ethnocentric_rg"
        android:text="HSC"
        android:textSize="16sp"
        android:textColor="#FFDBCB"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:fontFamily="@font/caviardreams"
        android:gravity="top"
        android:padding="0dp"
        android:text="@string/details2"
        android:textColor="#F2A30B"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="top"
        android:fontFamily="@font/ethnocentric_rg"
        android:text="Degree"
        android:textSize="16sp"
        android:textColor="#FFDBCB"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:fontFamily="@font/caviardreams"
        android:gravity="top"
        android:padding="0dp"
        android:text="@string/details1"
        android:textColor="#F2A30B"
        android:textSize="17sp"
        android:textStyle="bold" />


</LinearLayout>