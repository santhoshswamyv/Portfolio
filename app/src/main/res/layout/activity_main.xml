<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010B13"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="230dp"
        android:layout_height="230dp"
        app:cardCornerRadius="250dp"
        android:layout_margin="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        app:cardBackgroundColor="@color/cardview_dark_background">

        <androidx.cardview.widget.CardView
            android:layout_width="225dp"
            android:layout_height="225dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:src="@drawable/sandy1"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Santhosh Swamy V"
        android:fontFamily="@font/ethnocentric_rg_it"
        android:textSize="22sp"
        android:textColor="#FFDBCB"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:gravity="center"
        android:text="Software Engineer"
        android:textStyle="bold"
        android:fontFamily="@font/caviardreams"
        android:textColor="#F2A30B"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

    <Button
        android:id="@+id/skills"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textColor="#FFDBCB"
        android:text="Skills"
        android:backgroundTint="#550000"
        android:fontFamily="@font/ethnocentric_rg"/>

    <Button
        android:id="@+id/details"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:textColor="#FFDBCB"
        android:text="Education Details"
        android:textSize="9sp"
        android:backgroundTint="#550000"
        android:fontFamily="@font/ethnocentric_rg"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/experience"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:textColor="#FFDBCB"
            android:text="Experience"
            android:backgroundTint="#550000"
            android:fontFamily="@font/ethnocentric_rg"/>

        <Button
            android:id="@+id/acheivements"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:textColor="#FFDBCB"
            android:text="Acheivements"
            android:backgroundTint="#550000"
            android:textSize="12sp"
            android:fontFamily="@font/ethnocentric_rg"/>

    </LinearLayout>


</LinearLayout>